{
  "name": "kyc-checks",
  "version": "1.0.0",
  "description": "This is a simple REST API developed using node and express with typescript",
  "scripts": {
    "start": "npm run build-ts && node dist/server.js",
    "dev": "concurrently \"npm:watch\" \"npm:serve\"",
    "serve": "nodemon dist/server.js",
    "watch": "tsc -w",
    "build-ts": "tsc",
    "transpile": "tsc",
    "postinstall": "npm run build-ts",
    "lint": "tslint -c tslint.json -p tsconfig.json"
  },
  "engines": {
    "node": ">=8.0"
  },
  "keywords": [
    "Node",
    "Typescript",
    "Javascript"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/nmanikiran/rest-api-node-typescript.git"
  },
  "author": "Sanni Michael Tomiwa",
  "license": "MIT",
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.6",
    "@types/hapi__joi": "^17.1.6",
    "@types/helmet": "0.0.45",
    "@types/joi": "^14.3.4",
    "@types/node": "^12.12.50",
    "@types/winston": "^2.4.4",
    "concurrently": "^5.2.0",
    "nodemon": "^1.19.4",
    "typescript": "^3.9.7"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@hapi/joi-date": "^2.0.1",
    "@joi/date": "^2.0.1",
    "axios": "^0.19.2",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "express-rate-limit": "^5.1.3",
    "helmet": "^3.22.0",
    "http-status-codes": "^2.1.4",
    "joi": "^14.3.1",
    "moment": "^2.29.1",
    "morgan": "^1.10.0",
    "tslog": "^3.0.2",
    "tsutils": "^3.17.1",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.0"
  },
  "hooks": {
    "pre-commit": "npm run lint"
  }
}
